{
  "name": "@xonovex/eslint-config-base",
  "version": "0.1.22",
  "description": "Base ESLint configuration for Xonovex projects",
  "type": "module",
  "license": "MIT",
  "author": "Xonovex",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xonovex/platform.git",
    "directory": "packages/config/eslint-config-base"
  },
  "bugs": {
    "url": "https://github.com/xonovex/platform/issues"
  },
  "homepage": "https://github.com/xonovex/platform/tree/main/packages/config/eslint-config-base#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": {
        "source": "./src/index.ts",
        "default": "./src/index.ts"
      },
      "node": "./dist/src/index.js"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "import": {
        "source": "./src/*.ts",
        "default": "./src/*.ts"
      },
      "node": "./dist/src/*.js"
    }
  },
  "dependencies": {
    "@eslint/compat": "2.0.2",
    "@eslint/js": "9.39.2",
    "@typescript-eslint/eslint-plugin": "8.55.0",
    "@typescript-eslint/parser": "8.55.0",
    "@vitest/eslint-plugin": "1.6.7",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsdoc": "62.5.4",
    "eslint-plugin-perfectionist": "5.5.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-regexp": "3.0.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sonarjs": "3.0.7",
    "eslint-plugin-unicorn": "63.0.0",
    "globals": "17.3.0",
    "typescript-eslint": "8.55.0",
    "@xonovex/ts-config-node": "0.1.22"
  },
  "devDependencies": {
    "@xonovex/ts-config-node": "0.1.22",
    "@types/eslint": "9.6.1",
    "@types/eslint-plugin-security": "3.0.1",
    "@types/node": "^25.2.3"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "typecheck": "tsc --noemit",
    "test": "echo 'No tests for config package'"
  },
  "keywords": [
    "xonovex",
    "config",
    "eslint"
  ]
}
