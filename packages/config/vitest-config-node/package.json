{
  "name": "@xonovex/vitest-config-node",
  "version": "0.1.12",
  "description": "Vitest configuration for Node.js applications",
  "type": "module",
  "license": "MIT",
  "author": "Xonovex",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xonovex/platform.git",
    "directory": "packages/config/vitest-config-node"
  },
  "bugs": {
    "url": "https://github.com/xonovex/platform/issues"
  },
  "homepage": "https://github.com/xonovex/platform/tree/main/packages/config/vitest-config-node#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/src/index.d.ts",
      "node": "./dist/src/index.js",
      "import": {
        "source": "./src/index.ts",
        "default": "./src/index.ts"
      }
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "node": "./dist/src/*.js",
      "import": {
        "source": "./src/*.ts",
        "default": "./src/*.ts"
      }
    }
  },
  "dependencies": {
    "@xonovex/vitest-config-base": "0.1.12",
    "@xonovex/eslint-config-base": "^0.1.12",
    "@xonovex/ts-config-build": "^0.1.13"
  },
  "devDependencies": {
    "@xonovex/ts-config-build": "0.1.13",
    "@xonovex/eslint-config-base": "0.1.12"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "typecheck": "tsc --noemit",
    "test": "echo 'No tests for config package'"
  }
}
