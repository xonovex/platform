{
  "name": "@xonovex/core",
  "version": "0.1.15",
  "description": "Core library for Xonovex TypeScript scripts (Node.js)",
  "type": "module",
  "license": "MIT",
  "author": "Xonovex",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xonovex/platform.git",
    "directory": "packages/lib/core"
  },
  "bugs": {
    "url": "https://github.com/xonovex/platform/issues"
  },
  "homepage": "https://github.com/xonovex/platform/tree/main/packages/lib/core#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/src/index.js",
    "./*": "./dist/src/*.js"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsx watch src/index.ts",
    "check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@xonovex/eslint-config-cli": "0.1.15",
    "@xonovex/ts-config-cli": "0.1.15",
    "@xonovex/vitest-config-node": "0.1.15",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  }
}
