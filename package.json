{
  "name": "xonovex-platform",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "docs",
    "packages/config/*",
    "packages/cli/*",
    "packages/cli/agent-cli-go-platforms/*",
    "packages/lib/*",
    "packages/plugins/*",
    "packages/scripts/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@moonrepo/cli": "^2.0.0-rc.0",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/eslint": "9.6.1",
    "@types/node": "^25.0.10",
    "@vitest/coverage-istanbul": "4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "dependency-cruiser": "17.3.7",
    "eslint": "^9.39.2",
    "gitlab-ci-local": "^4.64.1",
    "jiti": "^2.6.1",
    "jsdom": "27.4.0",
    "knip": "5.82.1",
    "npm-check-updates": "19.3.1",
    "prettier": "^3.8.1",
    "quicktype": "23.2.6",
    "stylelint": "17.0.0",
    "stylelint-config-standard": "40.0.0",
    "syncpack": "14.0.0-alpha.19",
    "tsx": "^4.21.0",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "deps:check": "npm-check-updates --workspaces --dep prod,dev,optional",
    "deps:update": "npm-check-updates --workspaces -u --dep prod,dev,optional",
    "nix:shell": "nix --extra-experimental-features 'nix-command flakes' develop",
    "nix:lock": "nix --extra-experimental-features 'nix-command flakes' flake lock",
    "ci:github": "act push -W .github/workflows/ci.yml --input dry_run=true",
    "ci:gitlab": "gitlab-ci-local --file .gitlab/ci.yml --variable DRY_RUN=true",
    "moon": "moon",
    "build": "moon run :build",
    "test": "moon run :test",
    "lint": "moon run :lint",
    "lint:fix": "moon run :lint:fix",
    "fmt": "moon run :fmt",
    "fmt:check": "moon run :fmt:check",
    "typecheck": "moon run :typecheck",
    "coverage": "moon run :coverage",
    "dev": "moon run :dev",
    "clean": "moon run :clean",
    "check:all": "moon run :lint :typecheck",
    "check:fast": "moon run :lint:fix :typecheck --concurrency=4",
    "check:affected": "moon run :lint:fix :typecheck :test :build :fmt --affected --concurrency=4",
    "ci": "moon ci",
    "sync:hooks": "moon sync hooks",
    "docs:build": "moon run docs:build",
    "docs:dev": "moon run docs:dev",
    "docs:fmt": "moon run docs:fmt",
    "graph:npm-check": "npx moon-action-graph :npm-check npm-check docs/npm-check-graph.png",
    "graph:npm-publish": "npx moon-action-graph :npm-publish npm-publish docs/npm-publish-graph.png",
    "graph:ci-check": "npx moon-action-graph :ci-check ci-check docs/ci-check-graph.png",
    "graph:ci-publish": "npx moon-action-graph :ci-publish ci-publish docs/ci-publish-graph.png",
    "graph:ci-publish-dry-run": "npx moon-action-graph :ci-publish-dry-run ci-publish-dry-run docs/ci-publish-dry-run-graph.png",
    "graph:ci-publish-full": "npx moon-action-graph :ci-publish npm-publish,ci-publish docs/ci-publish-full-graph.png",
    "graph:all": "npm run graph:npm-check && npm run graph:npm-publish && npm run graph:ci-check && npm run graph:ci-publish && npm run graph:ci-publish-dry-run && npm run graph:ci-publish-full",
    "prepare": "npm run sync:hooks"
  },
  "packageManager": "npm@11.6.2"
}
